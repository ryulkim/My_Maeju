<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@id/check1"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_chainStyle="packed" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker"
        app:layout_constraintBottom_toTopOf="@id/check2"
        >
        <TableRow>
            <CheckBox
                android:id="@+id/ck_mon"
                android:text="월요일"
                />
            <CheckBox
                android:id="@+id/ck_tue"
                android:text="화요일"
                />
            <CheckBox
                android:id="@+id/ck_wed"
                android:text="수요일"
                />
            <CheckBox
                android:id="@+id/ck_thu"
                android:text="목요일"
                />

        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check2"
        app:layout_constraintBottom_toBottomOf="@+id/check1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button"
        >
        <TableRow>
            <CheckBox
                android:id="@+id/ck_fri"
                android:text="금요일"
                />
            <CheckBox
                android:id="@+id/ck_sat"
                android:text="토요일"
                />
            <CheckBox
                android:id="@+id/ck_sun"
                android:text="일요일"
                />
        </TableRow>
    </TableLayout>



    <Button
        android:text="출석 알람 발생시키기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="300dp"
        android:id="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>